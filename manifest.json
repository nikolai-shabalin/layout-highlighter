{
  "manifest_version": 3,
  "name": "Layout Highlighter",
  "version": "1.0",
  "description": "Показывает сетку сайта, подсвечивая вложенные теги.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Показать/скрыть сетку"
  },
  "icons": {
    "16": "/icons/16.png",
    "32": "/icons/32.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  }
}